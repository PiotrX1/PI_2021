@{
    List<SelectListItem> selectListItems = new List<SelectListItem>();
    selectListItems.Add(
        new SelectListItem
        {
            Text = "Kobieta",
            Value = "K"
        });
    selectListItems.Add(
        new SelectListItem
        {
            Text = "Mężczyzna",
            Value = "M"
        });
}
@model PersonModel

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <p>@Html.ValidationSummary()</p>
        <label asp-for="@Model.FirstName">Imię</label>
        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Imię", @class = "form-control" })
        <label asp-for="@Model.LastName">Nazwisko</label>
        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Nazwisko", @class = "form-control" })
        <label asp-for="@Model.Gender">Płeć</label>
        <select asp-for="@Model.Gender" class="form-control">
            <option value="K">Kobieta</option>
            <option value="M">Mężczyzna</option>
        </select>
        <label asp-for="@Model.Age">Wiek</label>
        @Html.TextBoxFor(m => m.Age, new { placeholder = "Wiek", @class = "form-control", @type = "number", @min = 1, value = 20, @max = 100 })
        <label asp-for="@Model.Description">Opis</label>
        @Html.TextAreaFor(m => m.Description, new { placeholder = "Opis", @class = "form-control" })
        <label asp-for="@Model.Picture">Zdjęcie</label>
        @Html.TextBoxFor(m => m.Picture, new { type = "file", @class = "form-control" })
        <label asp-for="@Model.City">Miasto</label>
        @Html.TextBoxFor(m => m.City, new { placeholder = "Miasto", @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>